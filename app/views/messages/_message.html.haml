.message{data: {message: {id: message.id}}}
.chat-main__messages__message
  .chat-main__messages__message__upper-info
    %p.chat-main__messages__message__upper-info__talker
      = message.user.name
    %p.chat-main__messages__message__upper-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  - if message.text.present?
    %p.chat-main__messages__message__text
      = message.text
  = image_tag message.image.url, class: 'chat-main__messages__message__image' if message.image.present?
